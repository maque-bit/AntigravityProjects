---
import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs/promises';
import path from 'node:path';

export async function getStaticPaths() {
    let data = { projects: [] };
    try {
        // In production build, this runs at build time.
        // CWD is src/web, so data is at ../data
        const relativePath = path.resolve('../data/analyzed_data.json');
        const content = await fs.readFile(relativePath, 'utf-8');
        data = JSON.parse(content);
    } catch (e) {
        console.error("Failed to load data for static paths:", e);
        return [];
    }

    return data.projects.map((project) => ({
        params: { slug: project.name.replace('/', '_') },
        props: { project },
    }));
}

const { project } = Astro.props;
const { name, stars, analysis } = project;

// Helper for safety color
const safetyColor = {
    'Safe': 'bg-emerald-500/20 text-emerald-300 border-emerald-500/50',
    'Caution': 'bg-yellow-500/20 text-yellow-300 border-yellow-500/50',
    'Unknown': 'bg-slate-500/20 text-slate-300 border-slate-500/50'
}[analysis?.safety_level || 'Unknown'];

---

<Layout title={`${name} | MCP Insider`}>
    <main class="container mx-auto px-4 py-12 max-w-5xl">
        <a href="/AntigravityProjects/" class="inline-flex items-center text-indigo-400 hover:text-indigo-300 mb-8 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Dashboard
        </a>

        <!-- Header Section -->
        <header class="mb-12 glass-panel p-8 rounded-3xl relative overflow-hidden backdrop-blur-xl bg-slate-900/40 border-slate-800/50">
            <div class="absolute top-0 right-0 w-64 h-64 bg-indigo-600/10 rounded-full blur-3xl -mr-16 -mt-16 pointer-events-none"></div>
            
            <div class="flex flex-col md:flex-row justify-between items-start gap-6 relative z-10">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <span class={`px-3 py-1 rounded-full text-xs font-mono border ${safetyColor}`}>
                            {analysis?.safety_level || 'Unknown'}
                        </span>
                        <span class="text-slate-500 text-sm font-mono">MIT License (Assumed)</span>
                    </div>
                    <h1 class="text-4xl md:text-5xl font-black tracking-tight mb-2 text-white">
                        {name.split('/')[1]}
                    </h1>
                    <p class="text-xl text-slate-400 font-light mb-6">
                        {name.split('/')[0]}
                    </p>
                    
                    <div class="flex flex-wrap gap-2 text-sm">
                        {analysis?.category?.map(cat => (
                            <span class="px-3 py-1 bg-slate-800 rounded-lg text-slate-300 border border-slate-700">#{cat}</span>
                        ))}
                    </div>
                </div>

                <div class="flex flex-col items-end gap-3">
                    <a href={project.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 bg-indigo-600 hover:bg-indigo-500 text-white px-6 py-3 rounded-xl transition-all font-bold shadow-lg shadow-indigo-600/20 hover:scale-105">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        View on GitHub
                    </a>
                    <div class="flex items-center gap-2 text-slate-400 font-mono text-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
                           <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        {stars.toLocaleString()} Stars
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column: Primary AI Analysis -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Catchphrase & Summary -->
                <section>
                    <h2 class="text-3xl md:text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-400 mb-6 leading-tight">
                        "{analysis?.catchphrase}"
                    </h2>
                    <div class="prose prose-invert prose-lg text-slate-300 leading-relaxed">
                        <p>{analysis?.summary_ja}</p>
                    </div>
                </section>

                <!-- Wow Factor -->
                <section class="glass-panel p-6 rounded-2xl border-l-4 border-indigo-500 relative overflow-hidden">
                    <div class="absolute -right-10 -top-10 w-32 h-32 bg-indigo-500/10 rounded-full blur-2xl"></div>
                    <h3 class="text-xl font-bold flex items-center gap-2 mb-3 text-indigo-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                        Wow Factor
                    </h3>
                    <p class="text-slate-200 text-lg font-medium italic">
                        {analysis?.wow_factor}
                    </p>
                </section>

                <!-- Use Cases -->
                <section>
                    <h3 class="text-2xl font-bold mb-4 flex items-center gap-2">
                        <span class="w-2 h-8 bg-purple-500 rounded-full"></span>
                        Use Cases
                    </h3>
                    <div class="grid gap-4">
                        {analysis?.use_cases?.map((useCase, i) => (
                            <div class="bg-slate-900/40 p-5 rounded-xl border border-slate-800 hover:border-slate-700 transition-colors">
                                <span class="text-purple-400 font-mono text-xs block mb-1">SCENARIO {i + 1}</span>
                                <p class="text-slate-300">{useCase}</p>
                            </div>
                        ))}
                    </div>
                </section>
            </div>

            <!-- Right Column: Stats & details -->
            <div class="space-y-6">
                <!-- Dev Utility Score -->
                <div class="glass-panel p-6 rounded-2xl text-center">
                    <h3 class="text-sm text-slate-400 font-mono mb-2 uppercase tracking-widest">Developer Utility</h3>
                    <div class="relative w-32 h-32 mx-auto flex items-center justify-center">
                        <svg class="w-full h-full transform -rotate-90">
                            <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="8" fill="transparent" class="text-slate-800" />
                            <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="8" fill="transparent" 
                                stroke-dasharray={351} 
                                stroke-dashoffset={351 - (351 * (analysis?.dev_utility || 0) / 10)} 
                                class={`text-indigo-500 transition-all duration-1000 ease-out`} />
                        </svg>
                        <span class="absolute text-4xl font-black text-white">{analysis?.dev_utility}<span class="text-lg text-slate-500 font-normal">/10</span></span>
                    </div>
                    <p class="text-sm text-slate-500 mt-2">Productivity Boost</p>
                </div>

                <!-- Installation (Mock for now, could be in analysis later) -->
                <div class="glass-panel p-6 rounded-2xl">
                    <h3 class="text-sm text-slate-400 font-mono mb-3 uppercase tracking-widest">Installation</h3>
                    <div class="bg-black/50 rounded-lg p-3 font-mono text-xs md:text-sm text-emerald-400 overflow-x-auto border border-slate-800">
                        <code>npx @modelcontextprotocol/server-...</code>
                    </div>
                    <p class="text-xs text-slate-500 mt-2 text-center">Coming soon: Auto-generated install commands</p>
                </div>
            </div>
        </div>
    </main>
</Layout>
