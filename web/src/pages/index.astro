<script>
  // Simple client-side view toggle logic
  const btnGrid = document.getElementById('btn-grid');
  const btnList = document.getElementById('btn-list');
  const gridView = document.getElementById('grid-view');
  const listView = document.getElementById('list-view');

  if (btnGrid && btnList && gridView && listView) {
    btnGrid.addEventListener('click', () => {
      btnGrid.classList.add('bg-white', 'shadow-sm', 'text-blue-600');
      btnGrid.classList.remove('text-gray-500');
      btnList.classList.remove('bg-white', 'shadow-sm', 'text-blue-600');
      btnList.classList.add('text-gray-500');
      
      gridView.classList.remove('hidden');
      gridView.classList.add('grid');
      listView.classList.add('hidden');
      listView.classList.remove('flex');
    });

    btnList.addEventListener('click', () => {
      btnList.classList.add('bg-white', 'shadow-sm', 'text-blue-600');
      btnList.classList.remove('text-gray-500');
      btnGrid.classList.remove('bg-white', 'shadow-sm', 'text-blue-600');
      btnGrid.classList.add('text-gray-500');
      
      listView.classList.remove('hidden');
      listView.classList.add('flex');
      gridView.classList.add('hidden');
      gridView.classList.remove('grid');
    });
  }

  // Category filtering & Search logic
  const categoryBtns = document.querySelectorAll('.category-btn');
  const projectCardLinkWrappers = document.querySelectorAll('#grid-view > a, #list-view > a');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const projectCount = document.getElementById('project-count');
  const emptyState = document.getElementById('empty-state');
  
  let currentFilter = 'all';
  let currentSearch = '';

  function filterProjects() {
    let visibleCount = 0;
    const query = currentSearch.toLowerCase().trim();
    
    // Process all link wrappers (both grid and list are synced by the fact they contain identical articles)
    // Actually, we need to iterate over grid articles and list articles separately if we want to hide them correctly.
    // However, the projectCardLinkWrappers contains both.
    
    projectCardLinkWrappers.forEach(parentLink => {
      if (!(parentLink instanceof HTMLElement)) return;
      const card = parentLink.querySelector('article');
      if (!card) return;
      
      const categories = card.getAttribute('data-categories')?.split(',') || [];
      const textContent = (card.innerText || card.textContent || "").toLowerCase();
      
      // Category Match
      const categoryMatch = currentFilter === 'all' || categories.includes(currentFilter);
      
      // Search Match
      const searchMatch = !query || textContent.includes(query);
      
      if (categoryMatch && searchMatch) {
        parentLink.style.display = '';
        visibleCount++;
      } else {
        parentLink.style.display = 'none';
      }
    });

    // Update count (visibleCount / 2 because each project exists in both grid and list view)
    if (projectCount) {
      projectCount.textContent = (visibleCount / 2).toString();
    }
    
    // Toggle Empty State
    if (emptyState) {
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
      } else {
        emptyState.classList.add('hidden');
      }
    }
  }

  if (categoryBtns.length > 0) {
    categoryBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        categoryBtns.forEach(b => {
          b.classList.remove('active', 'bg-gray-800', 'text-white');
          b.classList.add('bg-white', 'text-gray-600', 'border-gray-200');
        });
        btn.classList.add('active', 'bg-gray-800', 'text-white');
        btn.classList.remove('bg-white', 'text-gray-600', 'border-gray-200');

        currentFilter = btn.getAttribute('data-filter') || 'all';
        filterProjects();
      });
    });
  }

  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      currentSearch = (e.target as HTMLInputElement).value;
      filterProjects();
    });
  }
</script>
